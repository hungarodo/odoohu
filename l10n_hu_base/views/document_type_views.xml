<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record id="document_type_view_form"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.document.type.view.form</field>
        <field name="model">l10n.hu.document.type</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <form>
                <sheet>
                    <div name="button_box"
                         class="oe_button_box"
                    >
                    </div>
                    <div class="oe_title">
                        <h4>
                            <field name="name"
                                   placeholder="Name..."
                            />
                        </h4>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="priority"
                                   class="oe_inline"
                            />
                        </group>
                        <group>
                            <field name="description"
                                   placeholder="Description..."
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="audit"
                              attrs="{'invisible': [('id', '=', False)]}"
                              string="Audit"
                        >
                            <group name="audit">
                                <group name="audit_1">
                                    <field name="id"/>
                                    <field name="active"
                                           readonly="1"
                                    />
                                    <field name="company"
                                           readonly="1"
                                    />
                                    <field name="api_enabled"
                                           widget="boolean_toggle"
                                    />
                                    <field name="technical_name"/>
                                </group>
                                <group name="audit_2">
                                    <field name="create_uid"
                                           readonly="1"
                                    />
                                    <field name="create_date"
                                           readonly="1"
                                    />
                                    <field name="write_uid"
                                           readonly="1"
                                    />
                                    <field name="write_date"
                                           readonly="1"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"
                           widget="mail_activity"
                    />
                    <field name="message_follower_ids"
                           widget="mail_followers"
                    />
                    <field name="message_ids"
                           widget="mail_thread"
                    />
                </div>
            </form>
        </field>
    </record>
    <!-- List view -->
    <record id="document_type_view_list"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.document.type.view.list</field>
        <field name="model">l10n.hu.document.type</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <tree>
                <field name="priority"
                       widget="handle"
                />
                <field name="name"/>
                <field name="code"/>
                <field name="api_enabled"
                       optional="hide"
                />
                <field name="technical_name"
                       optional="hide"
                />
                <field name="id"
                       optional="hide"
                />
                <field name="company"
                       optional="hide"
                />
            </tree>
        </field>
    </record>
    <!-- Search view -->
    <record id="document_type_view_search"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.document.type.view.search</field>
        <field name="model">l10n.hu.document.type</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <search>
                <!-- Field -->
                <field name="name"/>
                <field name="code"/>
                <field name="technical_name"/>
                <!-- Filter -->
                <filter name="archived_filter"
                        domain="[('active','=', False)]"
                        string="Archived"
                />
                <separator/>
                <!-- Filter group by -->
                <group name="filter_group_by"
                       expand="0"
                       string="Group By"
                >
                    <filter name="company_filter_group_by"
                            context="{'group_by': 'company'}"
                            string="Company"
                    />
                </group>
            </search>
        </field>
    </record>
</odoo>
