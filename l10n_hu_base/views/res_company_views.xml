<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view inherit -->
    <record id="view_company_form_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.base.view.company.form.inherit</field>
        <field name="inherit_id"
               ref="base.view_company_form"
        />
        <field name="model">res.company</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- Warning -->
            <xpath expr="//field[@name='vat']"
                   position="before"
            >
                <div name="l10n_hu_warning"
                     class="card bg-warning text-white"
                     colspan="2"
                >
                    <div class="card-header">
                        <span>Please manage tax settings on the linked contact!</span>
                    </div>
                </div>
            </xpath>
            <!-- Fields -->
            <xpath expr="//page[last()]"
                   position="after"
            >
                <page name="l10n_hu"
                      string="HU"
                >
                    <group name="l10n_hu">
                        <group name="l10n_hu_1">
                            <field name="l10n_hu_api_enabled"
                                   string="API Enabled"
                                   widget="boolean_toggle"
                            />
                        </group>
                        <group name="l10n_hu_2">
                            <field name="l10n_hu_api_key"
                                   string="API Key"
                            />
                            <field name="l10n_hu_api_url"
                                   string="API URL"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
        