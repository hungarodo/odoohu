<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view inherit -->
    <record id="view_partner_form_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.base.view.partner.form.inherit</field>
        <field name="inherit_id"
               ref="base.view_partner_form"
        />
        <field name="model">res.partner</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- Fields -->
            <xpath expr="//page[@name='sales_purchases']"
                   position="before"
            >
                <page name="l10n_hu"
                      attrs="{'invisible': [('l10n_hu_enabled', '=', False)]}"
                      string="HU"
                >
                    <field name="l10n_hu_enabled"
                           invisible="1"
                    />
                    <group name="l10n_hu_disabled"
                           attrs="{'invisible': [('parent_id', '=', False)]}"
                           colspan="2"
                    >
                        <div class="card bg-info mr-4"
                             colspan="2"
                        >
                            <div class="card-header">
                                <i class="fa fa-info-circle mr-2"/>
                                <span class="mr-2">Settings are managed on the parent partner</span>
                                <button name="open_commercial_entity"
                                        class="btn btn-sm btn-primary"
                                        string="Open Parent"
                                        type="object"
                                />
                            </div>
                        </div>
                    </group>
                    <group name="l10n_hu_enabled"
                           attrs="{'invisible': [('parent_id', '!=', False)]}"
                    >
                        <group name="l10n_hu_enabled_1"
                               string="Identifiers"
                        >
                            <field name="l10n_hu_vat"
                                   attrs="{'readonly': [
                                       ('is_company', '=', False),
                                       ('parent_id', '!=', False),
                                   ]}"
                                   placeholder="12345678-9-10"
                                   string="HU VAT"
                            />
                            <field name="l10n_hu_crn"/>
                            <field name="l10n_hu_vpid"
                                   string="HU VPID"
                            />
                            <field name="l10n_hu_self_employed_number"
                                   attrs="{'readonly': [
                                       ('is_company', '=', False),
                                       ('parent_id', '!=', False),
                                   ]}"
                                   help="Self-Employed Number"
                                   string="S.E. Number"
                            />
                            <field name="l10n_hu_self_employed_name"
                                   attrs="{'readonly': [
                                       ('is_company', '=', False),
                                       ('parent_id', '!=', False),
                                   ]}"
                                   help="Self-Employed Name"
                                   string="S.E. Name"
                            />
                        </group>
                        <group name="l10n_hu_enabled_2"
                               attrs="{'invisible': [('parent_id', '!=', False)]}"
                               string="Taxation"
                        >
                            <field name="l10n_hu_cash_accounting"
                                   widget="boolean_toggle"
                            />
                            <field name="l10n_hu_personal_tax_exempt"
                                   widget="boolean_toggle"
                            />
                            <field name="l10n_hu_self_billing"
                                   widget="boolean_toggle"
                            />
                            <field name="l10n_hu_small_business"
                                   widget="boolean_toggle"
                            />
                            <field name="l10n_hu_vat_reverse_charge"
                                   widget="boolean_toggle"
                            />
                        </group>
                        <group name="l10n_hu_enabled_3"
                               string="Relations"
                        >
                            <field name="l10n_hu_financial_representative"
                                   options="{'no_quick_create': True,}"
                            />
                            <field name="l10n_hu_tax_unit"
                                   options="{'no_quick_create': True,}"
                            />
                            <field name="l10n_hu_tax_unit_vat"/>
                            <field name="l10n_hu_tax_unit_vat_hu"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <!-- List view inherit -->
    <record id="view_partner_tree_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.base.view.partner.tree.inherit</field>
        <field name="inherit_id"
               ref="base.view_partner_tree"
        />
        <field name="model">res.partner</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- Add partner fields -->
            <xpath expr="//field[@name='vat']"
                   position="after"
            >
                <field name="l10n_hu_vat"
                       optional="hide"
                       readonly="1"
                       string="HU VAT"
                />
                <field name="l10n_hu_vpid"
                       optional="hide"
                       string="HU VPID"
                />
            </xpath>
        </field>
    </record>
    <!-- Search view inherit -->
    <record id="view_res_partner_filter_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.base.view.res.partner.filter.inherit</field>
        <field name="inherit_id"
               ref="base.view_res_partner_filter"
        />
        <field name="model">res.partner</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- Field -->
            <xpath expr="//field[@name='parent_id']"
                   position="after"
            >
                <field name="l10n_hu_vat"
                       string="HU VAT"
                />
                <field name="l10n_hu_vpid"
                       string="HU VPID"
                />
            </xpath>
        </field>
    </record>
</odoo>
