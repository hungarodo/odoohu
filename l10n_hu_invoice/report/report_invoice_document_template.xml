<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice -->
    <template id="report_invoice"
              inherit_id="account.report_invoice"
    >
        <xpath expr='//t[@t-call="account.report_invoice_document"]'
               position="after"
        >
            <t t-if="o._get_name_invoice_report() != 'account.report_invoice_document' and o.journal_id.l10n_hu_invoice_document_template and o._get_name_invoice_report() == o.journal_id.l10n_hu_invoice_document_template.key and != 'account.report_invoice_document'"
               t-call="{{o.journal_id.l10n_hu_invoice_document_template.key}}"
               t-lang="lang"
            />
        </xpath>
    </template>
    <!-- Invoice with payments -->
    <template id="report_invoice_with_payments"
              inherit_id="account.report_invoice_with_payments"
    >
        <xpath expr='//t[@t-call="account.report_invoice_document"]'
               position="after"
        >
            <t t-if="o._get_name_invoice_report() != 'account.report_invoice_document' and o.journal_id.l10n_hu_invoice_document_template and o._get_name_invoice_report() == o.journal_id.l10n_hu_invoice_document_template.key"
               t-call="{{o.journal_id.l10n_hu_invoice_document_template.key}}"
               t-lang="lang"
            />
        </xpath>
    </template>
    <!-- Custom theme -->
    <template id="report_invoice_document_custom"
              name="l10n.hu.invoice.report.invoice.document.custom"
    >
        <div name="replace_this_using_xpath"/>
    </template>
</odoo>
