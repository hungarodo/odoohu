<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HU invoice company rule -->
    <record id="invoice_company_rule"
            model="ir.rule"
    >
        <field name="name">HU Invoice Company</field>
        <field name="domain_force">['|', ('company', '=', False), ('company', 'in', company_ids)]</field>
        <field name="model_id"
               ref="model_l10n_hu_invoice"
        />
        <field name="global"
               eval="True"
        />
    </record>
