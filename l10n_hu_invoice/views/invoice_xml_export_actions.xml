<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="invoice_xml_export_action"
            model="ir.actions.act_window"
    >
        <field name="name">HU Invoice XML Exports</field>
        <field name="res_model">l10n.hu.invoice.xml.export</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action tree view -->
    <record id="invoice_xml_export_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_xml_export_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="invoice_xml_export_view_list"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="invoice_xml_export_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_xml_export_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="invoice_xml_export_view_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
