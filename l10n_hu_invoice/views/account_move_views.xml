<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view inherit - customer invoice -->
    <record id="view_move_form_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.invoice.view.move.form.inherit</field>
        <field name="inherit_id"
               ref="l10n_hu_account.view_move_form_inherit"
        />
        <field name="model">account.move</field>
        <field name="arch"
               type="xml"
        >
            <!-- Add fields -->
            <xpath expr="//field[@name='l10n_hu_journal_technical_type']"
                   position="after"
            >
                <field name="l10n_hu_journal_invoice_enabled"
                       string="HU Invoice Journal"
                />
                <field name="l10n_hu_invoice"
                       options="{'no_create': True,}"
                       string="HU Invoice"
                />
                <field name="l10n_hu_invoice_status"
                       string="HU Invoice Status"
                />
            </xpath>
        </field>
    </record>
</odoo>
