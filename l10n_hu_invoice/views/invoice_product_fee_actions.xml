<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="invoice_product_fee_summary_action"
            model="ir.actions.act_window"
    >
        <field name="name">HU Invoice Product Fee Summaries</field>
        <field name="domain">[('scope', '=', 'summary')]</field>
        <field name="res_model">l10n.hu.invoice.product.fee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action list view -->
    <record id="invoice_product_fee_summary_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_product_fee_summary_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="invoice_product_fee_view_list_summary"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="invoice_product_fee_summary_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_product_fee_summary_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="invoice_product_fee_view_form"
        />
        <field name="view_mode">form</field>
    </record>
    <!-- Window action -->
    <record id="invoice_line_product_fee_action"
            model="ir.actions.act_window"
    >
        <field name="name">HU Invoice Line Product Fees</field>
        <field name="domain">[('scope', '=', 'line')]</field>
        <field name="res_model">l10n.hu.invoice.product.fee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action list view -->
    <record id="invoice_line_product_fee_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_line_product_fee_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="invoice_product_fee_view_list_line"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="invoice_line_product_fee_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_line_product_fee_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="invoice_product_fee_view_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
