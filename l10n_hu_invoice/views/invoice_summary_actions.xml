<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="invoice_summary_action"
            model="ir.actions.act_window"
    >
        <field name="name">HU Invoice Summaries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.hu.invoice.summary</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action list view -->
    <record id="invoice_summary_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_summary_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="invoice_summary_view_list"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="invoice_summary_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="invoice_summary_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="invoice_summary_view_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
