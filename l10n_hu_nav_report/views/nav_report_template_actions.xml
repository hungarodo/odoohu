<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="nav_report_template_action"
            model="ir.actions.act_window"
    >
        <field name="name">NAV Report Templates</field>
        <field name="res_model">l10n.hu.nav.report.template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action tree view -->
    <record id="nav_report_template_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="nav_report_template_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="nav_report_template_view_list"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="nav_report_template_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="nav_report_template_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="nav_report_template_view_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
